{
    "compilerOptions": {
      "target": "ES2020",                     // Sets the output JavaScript version (ES2020 features like optional chaining will be preserved)
      "module": "CommonJS",            // Uses Node.js-style modules (required for `require`/`exports`)
      "esModuleInterop": true,          // Allows default imports from CommonJS modules
      "outDir": "./dist",                        // Compiled JS files will go into the 'dist' directory
      "rootDir": "./",                             // Tells TypeScript where your source files live
    //   "strict": true,                              // Enables *all* strict type-checking options
      "skipLibCheck": true                 // Skips type-checking of `node_modules` to speed up builds
    },
    "include": ["*.ts", "**/*.ts"]        // Tells TypeScript which files to compile
  }
  